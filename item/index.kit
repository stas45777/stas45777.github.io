<section class="product">
  <div class="container">
    <div class="product__block">
      <div class="product__wrap galery__wrap">
        <div class="product__galery">
          <div class="product__galery__item">
            <div class="product__galery__item__img">
              <img src="/img/product_1.png" alt="">
